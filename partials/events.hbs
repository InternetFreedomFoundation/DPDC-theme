{{#get "posts" filter="tags:event" limit="all" as |events|}}
    {{#if events}}
    <div class="events-wrapper">
        <div class="events">
            <h1 class="heading">events</h1>
            <div class="event-feed js-event-feed">
                {{#foreach events visibility="all"}}
                    <div class="event-card">
                            <img class="event-image lazyload u-object-fit" {{#if feature_image}} data-srcset="{{img_url feature_image size=" 1x"}}
          1x, {{img_url feature_image size="2x" }} 2x, {{img_url feature_image size="3x" }} 3x" {{/if}} src={{img_url
          feature_image}} data-sizes="auto" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                    </div>
                {{/foreach}}
            </div>
        </div>
    </div>
    {{/if}}
{{/get}}