{
  "name": "dpdc",
  "version": "1.0.0",
  "description": "DPDC Ghost Theme",
  "keywords": [
    "ghost-theme",
    "internet-freedom-foundation"
  ],
  "author": {
    "name": "Internet Freedom Foundation",
